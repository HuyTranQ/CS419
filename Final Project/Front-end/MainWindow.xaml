<Window x:Class="Front_end.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Front_end"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="train" Click="train_Click" Content="Train" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <TextBox x:Name="corpus" HorizontalAlignment="Left" Height="23" Margin="90,10,0,0" TextWrapping="Wrap" Text="Corpus Location" VerticalAlignment="Top" Width="417"/>
        <Button x:Name="retrieve" Click="retrieve_Click" Content="Retrieve" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <TextBox x:Name="query" HorizontalAlignment="Left" Height="23" Margin="90,47,0,0" TextWrapping="Wrap" Text="Query" VerticalAlignment="Top" Width="417"/>
        <TextBlock x:Name="result" HorizontalAlignment="Left" Margin="10,75,0,0" TextWrapping="Wrap" Text="Result" VerticalAlignment="Top" Width="497" Height="234"/>


    </Grid>
</Window>
